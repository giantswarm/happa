{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "@types/jest",
        "jest"
      ],
      "groupName": "jest"
    },
    {
      "matchPackagePatterns": ["^eslint"],
      "groupName": "eslint"
    }
  ],
  "prConcurrentLimit": 5,
  "schedule": [
    "every weekend",
    "before 5am every weekday",
    "after 10pm every weekday"
  ]
}
